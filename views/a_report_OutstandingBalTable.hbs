{{!-- This is for setting up the school year for the system, Admin --}}

{{>a_navbar}}
{{>a_sidebar}}

<div class="col-9">
    <div class="shadow">
        <div class="list-group mt-2 shadow bg-light">
            <div class="container">
                <h1 class="display-4 text-center">Outstanding Balance Report</h1>
            </div>
            <div class="mt-2">
                <div class="container">
                    <table class="table table-bordered mb-0 table-striped">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">Student ID</th>
                                <th scope="col">Student Name</th>
                                <th scope="col">Section Name</th>
                                <th scope="col">Remaining Balance</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each balReport}}
                            <tr>
                                <td class="text-center">{{studentID}}</td>
                                <td>{{studentName}}</td>
                                <td>{{sectionName}}</td>
                                <td class="text-right">Php {{getPrice remBal}}</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                    <form>
                        <br>
                        <div class="form-group row m-5">
                            <label for="a_r_OB_schoolYear"
                                class="col-3 d-flex justify-content-center align-items-center m-0">School Year:</label>
                            <select class="form-control col-9 p-0 m-0 dropdown-schoolYear" id="a_u_ST_schoolYear">
                                {{#if (getBool schoolYear)}}
                                <option value="{{SYSettings}}">{{SYSettings}}--selected</option>
                                {{#each schoolYear}}
                                {{>dropdownOpt this}}
                                {{/each}}
                                {{else}}
                                <option value="">--School Year--</option>
                                {{/if}}
                            </select>
                        </div>
                        <br><br>
                        <div class="form-group ">
                            <div class="row">
                                <div class="col-7 mb-5 d-flex justify-content-end">
                                    <a href="/a/report/outstandingBalance" class="btn btn-outline-primary mb-4">Go
                                        Back</a>
                                </div>
                            </div>
                        </div>
                    </form>
                    <br>
                </div>
            </div>
        </div>
    </div>
</div>


</div>
</div>