{{!-- This is for setting up the school year for the system, Admin --}}

{{>a_navbar}}
{{>a_sidebar}}

                <div class="col-9">
                    <div class="shadow">
                         <div class="list-group mt-2 shadow bg-light">
                            <div class="container">
								<h1 class="display-4 text-center">Outstanding Balance Report</h1>
							</div>
                        <div class = "mt-2"><div class="container">
                                <table class="table table-bordered mb-0">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th scope="col">Product ID</th>
                                            <th scope="col">Product Name</th>
                                            <th scope="col">Total Sales</th>
                                            <th scope="col">Average Daily Sales</th>
                                            <th scope="col">Total Amount Paid</th>
                                            {{!-- <th scope="col"></th> --}}
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each supplierReportData}}
                                        {{>supplierReportDetail_row this}}
                                        {{/each}}
                                        {{#if totalSales}}
                                        <tr>
                                            <th scope="row" colspan = "2" class="text-left">Total</th>
                                            <td class="text-right">{{getPrice totalSales}}</td>
                                            <td class="text-right">{{getPrice avgSales}}</td>
                                            <td class="text-right">{{getPrice totalPaid}}</td>
                                        </tr>
                                        {{/if}}
                                        <tr>
                                            <td class="text-right" colspan='5'>
                                                <a href="/m/viewBreakdown/{{{supplierID}}}/{{{fromDate}}}/{{{toDate}}}" class="btn btn-outline-dark btn-block">View Breakdown</a>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
								<form>
                                    <p>Select School Year:</p>
                                    <br>
									<div class="form-group row">
                                        <label for="a_u_ST_schoolYear"
                                            class="col-3 d-flex justify-content-center align-items-center m-0">School Year:</label>
                                        <select class="form-control col-6 p-0 m-0" id="a_u_ST_schoolYear">
                                            {{#each schoolYear}}
                                            {{>dropdownOpt this}}
                                            {{/each}}
                                        </select>
                                    </div>
                                    <br><br>
                                    <div class="form-group ">
                                        <div class="row">
                                            <div class="col-7 mb-5 d-flex justify-content-end">
                                                <a id="submitBalanceReport" class="btn btn-outline-primary mb-4">View Report</a>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                                <br>
                            </div></div>
                        </div>
                    </div>
                </div>


            </div>
        </div>