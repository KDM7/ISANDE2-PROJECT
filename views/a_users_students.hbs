{{!-- This is for viewing all of the students, Admin --}}

{{>a_navbar}}
{{>a_sidebar}}

<div class="col-9">
    <div class="shadow">
        <div class="d-flex flex-column mt-2 bg-light">
            <div class="container">
                <div class="row mt-2">
                    <div class="col-6">
                        <div class="form-group row">
                            <label for="a_u_ST_schoolYear"
                                class="col-3 d-flex justify-content-center align-items-center m-0">School Year:</label>
                            <select class="form-control col-9 p-0 m-0 dropdown-schoolYear">
                                {{#if (getBool schoolYear)}}
                                <option value="{{SYSettings}}">{{SYSettings}}--selected</option>
                                {{#each schoolYear}}
                                {{>dropdownOpt this}}
                                {{/each}}
                                {{else}}
                                <option value="">--School Year--</option>
                                {{/if}}
                            </select>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group row">
                            <label for="a_u_ST_gradeLVL"
                                class="col-3 d-flex justify-content-center align-items-center m-0">Grade Level:</label>
                            <select class="form-control col-9 p-0 m-0 dropdown-gradeLvl">
                                {{#if (getBool gradeLvl)}}
                                <option value="{{GLSettings}}">{{GLSettings}}--selected</option>
                                {{#each gradeLvl}}
                                {{>dropdownOpt this}}
                                {{/each}}
                                {{else}}
                                <option value="">--Grade Level--</option>
                                {{/if}}

                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="mt-2">
                <table class="table table-bordered">
                    <thead class="thead-primary">
                        <tr>
                            <th scope="col">Remarks</th>
                            <th scope="col">Student Number</th>
                            <th scope="col">Name</th>
                            <th scope="col"></th>
                            <th scope="col"></th>
                            <th scope="col">

                            </th>
                        </tr>
                    </thead>
                    <tbody>

                        {{#each student}}
                        {{>a_u_ST_students this}}
                        {{/each}}

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


</div>
</div>